<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:nestedScrollingEnabled="false"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_SMStext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_30"
        android:layout_marginTop="@dimen/dimens_10"
        android:maxLines="2"
        android:text="Active postpaid in just three clicks and avail Instant Credit"
        android:textColor="#343434"
        android:textSize="@dimen/dimens_text_size_11"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/ll_bottom_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_30"
        android:layout_marginVertical="@dimen/dimens_10"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/tv_SMStext">

        <TextView
            android:id="@+id/tv_eventCaptureDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="2 hours ago"
            android:textColor="#75829b"
            android:textSize="@dimen/dimens_text_size_11">

        </TextView>

        <TextView
            android:id="@+id/imv_collapse"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_20"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:text="View More"
            android:textAlignment="textEnd"
            android:textColor="#0069ba"
            android:textSize="@dimen/dimens_text_size_12"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_relationship_no" />

        <TextView
            android:id="@+id/imv_collapse_close"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimens_20"
            android:layout_weight="0.5"
            android:text="View Less"
            android:textAlignment="textEnd"
            android:textColor="#0069ba"
            android:textSize="@dimen/dimens_text_size_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_relationship_no" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd"
        android:layout_marginTop="@dimen/dimens_10"
        app:layout_constraintTop_toBottomOf="@+id/ll_bottom_options" />
</androidx.constraintlayout.widget.ConstraintLayout>